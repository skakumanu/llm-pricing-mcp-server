{
  "name": "estimate_cost",
  "description": "Calculate the cost of using a specific LLM model based on input and output token counts",
  "inputSchema": {
    "type": "object",
    "properties": {
      "model_name": {
        "type": "string",
        "description": "Name of the LLM model (e.g., 'gpt-4', 'claude-3-opus', 'mistral-large')"
      },
      "input_tokens": {
        "type": "integer",
        "description": "Number of input tokens (must be >= 0)",
        "minimum": 0
      },
      "output_tokens": {
        "type": "integer",
        "description": "Number of output tokens (must be >= 0)",
        "minimum": 0
      }
    },
    "required": ["model_name", "input_tokens", "output_tokens"]
  },
  "examples": [
    {
      "description": "Estimate cost for GPT-4 with 1000 input and 500 output tokens",
      "input": {
        "model_name": "gpt-4",
        "input_tokens": 1000,
        "output_tokens": 500
      },
      "output": {
        "success": true,
        "model_name": "gpt-4",
        "provider": "openai",
        "input_tokens": 1000,
        "output_tokens": 500,
        "input_cost": 0.03,
        "output_cost": 0.03,
        "total_cost": 0.06,
        "currency": "USD"
      }
    },
    {
      "description": "Estimate cost for Claude 3 Opus",
      "input": {
        "model_name": "claude-3-opus",
        "input_tokens": 5000,
        "output_tokens": 1000
      },
      "output": {
        "success": true,
        "model_name": "claude-3-opus",
        "provider": "anthropic",
        "input_tokens": 5000,
        "output_tokens": 1000,
        "input_cost": 0.075,
        "output_cost": 0.03,
        "total_cost": 0.105,
        "currency": "USD"
      }
    }
  ]
}
