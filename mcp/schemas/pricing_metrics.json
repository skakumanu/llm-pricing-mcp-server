{
  "description": "Metrics for a specific LLM model.",
  "properties": {
    "model_name": {
      "description": "Name of the LLM model",
      "title": "Model Name",
      "type": "string"
    },
    "provider": {
      "description": "Provider of the model (e.g., OpenAI, Anthropic)",
      "title": "Provider",
      "type": "string"
    },
    "cost_per_input_token": {
      "description": "Cost per input token in USD",
      "title": "Cost Per Input Token",
      "type": "number"
    },
    "cost_per_output_token": {
      "description": "Cost per output token in USD",
      "title": "Cost Per Output Token",
      "type": "number"
    },
    "throughput": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Tokens per second throughput",
      "title": "Throughput"
    },
    "latency_ms": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Average latency in milliseconds",
      "title": "Latency Ms"
    },
    "context_window": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Maximum context window size",
      "title": "Context Window"
    },
    "currency": {
      "default": "USD",
      "description": "Currency for pricing (default: USD)",
      "title": "Currency",
      "type": "string"
    },
    "unit": {
      "default": "per_1k_tokens",
      "description": "Unit for pricing (default: per 1k tokens)",
      "title": "Unit",
      "type": "string"
    },
    "source": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Source of the pricing data (e.g., API, documentation)",
      "title": "Source"
    },
    "last_updated": {
      "description": "Last update timestamp",
      "format": "date-time",
      "title": "Last Updated",
      "type": "string"
    },
    "use_cases": {
      "anyOf": [
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "List of ideal use cases for this model",
      "title": "Use Cases"
    },
    "strengths": {
      "anyOf": [
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Key strengths of this model",
      "title": "Strengths"
    },
    "best_for": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Quick summary of what this model is best for",
      "title": "Best For"
    }
  },
  "required": [
    "model_name",
    "provider",
    "cost_per_input_token",
    "cost_per_output_token"
  ],
  "title": "PricingMetrics",
  "type": "object"
}